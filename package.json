{
  "name": "remix-dev-connector",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:TituxMetal/heavy-metal-stack.git",
  "license": "MIT",
  "author": "Titux Metal (DEV) <github@lgdweb.fr>",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "dev": "remix dev --manual",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "remix-serve build/index.js",
    "start:mocks": "binode --require ./mocks --require ./node_modules/dotenv/config -- @remix-run/serve:remix-serve build/index.js",
    "test": "VITE_CJS_IGNORE_WARNING=true vitest",
    "test:e2e:dev": "playwright test",
    "pretest:e2e:run": "yarn build",
    "test:e2e:run": "cross-env CI=true playwright test",
    "typecheck": "tsc -b",
    "validate": "run-p \"test --run\" lint typecheck test:e2e:run"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@remix-run/node": "^2.4.1",
    "@remix-run/react": "^2.4.1",
    "@remix-run/serve": "^2.4.1",
    "@remix-run/server-runtime": "^2.4.1",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "isbot": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@flydotio/dockerfile": "^0.5.0",
    "@playwright/test": "^1.40.1",
    "@remix-run/dev": "^2.4.1",
    "@remix-run/eslint-config": "^2.4.1",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/eslint": "^8.56.0",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.1.0",
    "autoprefixer": "^10.4.16",
    "binode": "^1.0.5",
    "c8": "^9.0.0",
    "cookie": "^0.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "happy-dom": "^13.0.0",
    "msw": "^2.0.11",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "prettier": "3.2.2",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "prisma": "^5.7.1",
    "remix-flat-routes": "^0.6.4",
    "tsx": "^4.7.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": "20"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
